<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <CheckBox
            android:id="@+id/connectionCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mic"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/startText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:hint="출발지"
            android:layout_marginStart="34dp"
            />
        <Button
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="검색"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/endText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:hint="도착지"
            android:layout_marginStart="34dp"
            />
        <Button
            android:id="@+id/endBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="검색"
            android:textSize="20sp"
            android:layout_margin="10dp"
            />


    </LinearLayout>

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="5dp"
         android:layout_marginStart="19dp"
        >

         <Button
             android:id="@+id/findRouteBtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="길찾기"
             android:layout_marginStart="15dp"
             android:textSize="18sp"
             />

         <Button
             android:id="@+id/scanStartBtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="21dp"
             android:text="스캔 시작"
             android:textSize="18sp"
             />

        <Button
            android:id="@+id/scanStopBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스캔 중지"
            android:textSize="18sp"
            android:layout_marginStart="21dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="capture"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/captureView"
                android:layout_margin="14dp"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/my_block_image"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/detectView"
                android:layout_margin="14dp"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/my_block_image"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현위치: "
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/curPositionText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="세팅 전"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/navigateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.2"
            />


    </ScrollView>


</LinearLayout>
